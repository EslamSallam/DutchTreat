@model ContactViewModel
@{
    ViewData["Title"] = "Contact";
}
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
}
<div class="col-md-4">
    <div class="card card-body bg-light">
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row">
                <label class="form-label" asp-for="name">Your Name: </label>
                <input class="form-control" type="text" asp-for="name" />
                <span asp-validation-for="name" class="text-warning"></span>
            </div>

            <div class="row">
                <label class="product-props form-label" asp-for="email">Email: </label>
                <input class="form-control" type="email" asp-for="email" />
                <span asp-validation-for="email"></span>
            </div>
            <div class="row">
                <label class="product-props form-label" asp-for="subject">Subject: </label>
                <input class="form-control" type="text" asp-for="subject" />
                <span asp-validation-for="subject"></span>
            </div>
            <div class="row">
                <label class="form-label" asp-for="message">Message: </label>
                <br />
                <textarea class="form-control" rows="4" asp-for="message"></textarea>
                <span asp-validation-for="message" class="text-warning"></span>
            </div>
            <div>
                <br />
                <input type="submit" value="Send Message" class="btn btn-primary" />
                <div class="text-success">@ViewBag.UserMessage</div>
            </div>
        </form>
    </div>
</div>

